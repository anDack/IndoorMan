<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginLeft="5dp"
            android:id="@+id/image_indoor"
            android:layout_width="80dp"
            android:layout_height="80dp" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/title_indoor"
                android:text="wosibcti"
                android:padding="5dp"
                android:layout_gravity="center"
                android:textSize="30sp"
                android:textColor="@android:color/black"
                android:lines="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/content_indoor"
                android:text="neirong"
                android:lines="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="0dp"/>
      <ImageView
          android:src="@drawable/ic_today_black_24dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/time_indoor"
            android:text="2016-22"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    <ImageView
        android:layout_marginLeft="2dp"
        android:src="@drawable/ic_borwse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
        <TextView
            android:text="10000"
            android:layout_marginRight="2dp"
            android:layout_gravity="center"
            android:id="@+id/browse_indoor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>